

@model IEnumerable<StepUpPL.Models.Trainee>

@{
    ViewBag.Title = "FetchByName";
    Layout = "~/Views/Shared/_newui.cshtml";
}

<h4>Trainee Details</h4>


<div style="text-align:right">

    <div class="dropdown">
        <button class="dropbtn">+ ADD</button>
        <div class="dropdown-content">
            <a href="#">@Html.ActionLink("+ Add New Trainee Details", "AddTraineeDetails", null, new { style = "color:green" })</a>
            <a href="#">  @Html.ActionLink("+ Bulk Upload", "BulkUpload", null, new { style = "color:green" }) </a>

        </div>
    </div>

</div>
@using (Html.BeginForm("FetchByName", "Login", FormMethod.Get))
{
    <p style="text-align:left">
        <h5 style="text-align:left">   Find by PSnumber / Email / Skillset : @Html.TextBox("traineePSNum", ViewBag.CurrentFilter as string) <input type="submit" value="Search" /></h5>
        <h6 style="text-align:left"> @Html.ActionLink("Back", "FetchTrainee") </h6>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Trainee_PSNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Trainee_EmailiD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CurrentSkillSet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ExpectedTraining_Phase1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ExpectedTraining_Phase2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TraineeDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trainee_PSNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainee_EmailiD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSkillSet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedTraining_Phase1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedTraining_Phase2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeDate)
            </td>

        </tr>
    }

</table>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    .dropbtn {
        background-color: #04AA6D;
        color: white;
        padding: 10px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 120px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 5px 5px 5px 5px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }
</style>

