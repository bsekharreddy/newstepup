@model StepUpPL.Models.FacultiesDTO

@{
    ViewBag.Title = "AddFacultyDetails";
    Layout = "~/Views/Shared/_newui.cshtml";
}

<h3>AddFacultyDetails</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div style="text-align:left" class="form-group">
        @Html.LabelFor(model => model.Faculty_PS, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Faculty_PS, new { htmlAttributes = new { @class = "form-control", @id = "userps", onkeyup = "UserCheck()" } })
            @Html.ValidationMessageFor(model => model.Faculty_PS, "", new { @class = "text-danger" })
        </div>
        <span id="spaner"></span>
    </div>

        <div style="text-align:left" class="form-group">
            @Html.LabelFor(model => model.Faculty_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Faculty_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Faculty_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="text-align:left" class="form-group">
            @Html.LabelFor(model => model.Faculty_Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Faculty_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Faculty_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="text-align:left" class="form-group">
            @Html.LabelFor(model => model.Faculty_Track, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Faculty_Track, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Faculty_Track, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div style="text-align:left" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ADD" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div style="color:red;">@ViewBag.Message</div>

<div>
    @Html.ActionLink("Back", "FetchLogin")
</div>
<script>
    function UserCheck() {

        $.post("@Url.Action("CheckUsernameAvailability1", "Login")",
            {
                userdata: $("#userps").val()
            },
        function (data) {
            if (data == 0) {
                $("#spaner").html('<font color="Green">PS Number is avaiable</font>');
                $("#userps").css("border-color", "Green","text-align","center");

            }
            else {
                $("#spaner").html('<font color="Red">PS Number is not avaiable</font>');
                $("#userps").css("border-color", "Red");
            }
        });
    }
</script>